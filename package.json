{
  "name": "job-posting-portal",
  "version": "1.0.0",
  "description": "A modern job posting platform built with React, Node.js, and PostgreSQL",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "concurrently \"npm run build:shared\" \"npm run build:backend\" \"npm run build:frontend\"",
    "build:fast": "concurrently \"npm run build:shared\" \"npm run build:backend\" \"cd frontend && npm run build:fast\"",
    "build:full": "npm run build:shared && npm run build:backend:full && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:backend:full": "cd backend && npm run build:full",
    "build:shared": "cd shared && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:e2e": "cd frontend && npm run test:e2e",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules frontend/node_modules backend/node_modules shared/node_modules",
    "setup": "npm install && npm run build:shared",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:migrate": "cd backend && npm run migrate",
    "db:seed": "cd backend && npm run seed",
    "db:reset": "cd backend && npm run db:reset"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "job-portal",
    "job-board",
    "recruitment",
    "careers",
    "react",
    "nodejs",
    "postgresql",
    "typescript"
  ],
  "author": "Yaroslav Bashenko",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/job-posting-portal"
  }
}
